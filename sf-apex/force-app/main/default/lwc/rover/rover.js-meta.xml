<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Rover Path</masterLabel>
    <description>Add a classic greeting to any page.</description>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage">
            <property name="rover" type="String" label="Name" placeholder="World" description="Enter the name of the Rover to greet."/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
